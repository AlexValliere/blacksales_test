<div class="bg-white pt-6">
  <div class="mx-auto max-w-2xl px-4 pb-16 sm:px-6 sm:pb-24 lg:max-w-7xl lg:px-8">
    <nav aria-label="Breadcrumb">
      <ol role="list" class="mx-auto flex max-w-2xl items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <li>
          <div class="flex items-center">
            <%= link_to "Products", products_path, class: "mr-2 text-sm font-medium text-gray-900" %>
            <svg width="16" height="20" viewBox="0 0 16 20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-300">
              <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
            </svg>
          </div>
        </li>
      </ol>
    </nav>

    <div class="grid grid-cols-1 mt-6 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
      <% @products.each do |product| %>
        <%= link_to product_path(product), class: "group" do %>
          <div class="aspect-h-1 aspect-w-1 w-full overflow-hidden rounded-lg bg-gray-200 xl:aspect-h-8 xl:aspect-w-7">
            <%= image_tag product.image_url, class: "h-full w-full object-cover object-center group-hover:opacity-75" %>
          </div>
          <h3 class="mt-4 text-sm text-gray-700"><%= product.title %></h3>
          <p class="mt-1 text-lg font-medium text-gray-900"><%= number_to_currency(product.price) %></p>
        <% end %>
      <% end %>
    </div>

  </div>
</div>